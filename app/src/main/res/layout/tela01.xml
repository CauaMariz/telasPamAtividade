<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/labelNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/nome"
        android:text="Nome"
        android:textColor="#4378FF"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:hint="ex: Caua Mariz"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/labelNome" />

    <TextView
        android:id="@+id/labelCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/cpf"
        android:text="CPF"
        android:textColor="#4378FF"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nome" />

    <EditText
        android:id="@+id/cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:hint="000.000.000-00"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelCpf"/>

    <TextView
        android:id="@+id/labeldataNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/dataNasc"
        android:text="Data de Nascimento"
        android:textColor="#4378FF"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cpf" />

    <EditText
        android:id="@+id/dataNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: 08/09/2004"
        android:layout_marginStart="13dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labeldataNasc" />

    <TextView
        android:id="@+id/labelNomeMae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/dataNasc"
        android:text="Nome da MÃ£e"
        android:textColor="#4378FF"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dataNasc" />

    <EditText
        android:id="@+id/nomeMae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="4dp"
        android:hint="ex: Juliana Andrade"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelNomeMae" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Voltar"
        android:textColor="#FF9A09"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeMae" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="380dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"

        android:backgroundTint="#FF9A09"
        android:text="Continuar"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
