<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Login"
        android:textColor="#0082C7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/labelEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seu email: "
        android:labelFor="@+id/emailUser"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:textColor="#757575"
        android:textStyle="bold"
        />
    <EditText android:id="@+id/emailUser"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="ex: email@gmail.com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelEmail"
        android:layout_marginStart="28dp"
        />


    <TextView android:id="@+id/labelSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sua senha: "
        android:labelFor="@+id/senhaUser"
        app:layout_constraintTop_toBottomOf="@+id/emailUser"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:textColor="#757575"
        android:textStyle="bold"
        />
    <EditText android:id="@+id/senhaUser"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="ex: jhsad2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelSenha"
        android:layout_marginStart="28dp"
        />

    <CheckBox android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Manter-me logado"
        app:layout_constraintTop_toBottomOf="@+id/senhaUser"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0082C7"
        android:text="Logar"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:maxHeight="100dp"
        android:background="#A7ADDBF4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogar"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda nÃ£o tem conta?"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/btnCadastrase"
            android:layout_width="130dp"
            android:layout_height="40dp"


            android:backgroundTint="@color/white"
            android:text="Cadastra-se"
            android:textColor="#0582C3"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            app:strokeColor="#FF8F18"
            app:strokeWidth="1dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
